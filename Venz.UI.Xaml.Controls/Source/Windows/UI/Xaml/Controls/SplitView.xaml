<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="using:Venz.UI.Xaml.Controls">

    <Style TargetType="Controls:SplitView">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:SplitView">
                    <Grid>
                        <ContentPresenter Content="{TemplateBinding Content}"/>
                        <Rectangle x:Name="LightDismissLayer" Fill="Transparent" Visibility="Collapsed"/>
                        <Grid
                            x:Name="PaneRoot"
                            HorizontalAlignment="Left"
                            IsHitTestVisible="False"
                            Opacity="0">
                            <ContentPresenter Content="{TemplateBinding Pane}"/>
                            <Grid.RenderTransform>
                                <CompositeTransform/>
                            </Grid.RenderTransform>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>