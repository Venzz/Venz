<UserControl
    x:Class="Venz.UI.Xaml.Controls.MasterDetailsContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    SizeChanged="OnSizeChanged">

    <Grid x:Name="Layout">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Rectangle
            x:Name="MasterBackgroundControl"
            Fill="{Binding MasterBackground, Mode=OneWay}">
        </Rectangle>
        <ContentPresenter
            x:Name="MasterPresenter"
            Grid.Column="0">
        </ContentPresenter>
        <ContentPresenter
            x:Name="DetailsPresenter"
            Grid.Column="0">
        </ContentPresenter>
    </Grid>
</UserControl>
