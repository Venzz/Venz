<UserControl
    x:Class="Venz.UI.Xaml.Controls.SplitViewMenuHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="2,0,0,0" Orientation="Horizontal" Background="Transparent">
        <PathIcon
            Margin="0,2,0,0"
            Data="M0,0 H20 V1.25 H0   M0,5 H20 V6.25 H0   M0,10 H20 V11.25 H0"
            VerticalAlignment="Center"
            RenderTransformOrigin="0.5,0.5">
            <PathIcon.RenderTransform>
                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
            </PathIcon.RenderTransform>
        </PathIcon>
        <TextBlock
            x:Name="TextControl"
            Margin="24,0,0,0"
            FontSize="18"
            FontWeight="SemiBold"
            VerticalAlignment="Center">
        </TextBlock>
    </StackPanel>
</UserControl>
