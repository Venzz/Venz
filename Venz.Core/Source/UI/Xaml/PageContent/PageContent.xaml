<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="using:Venz.UI.Xaml">

    <Style TargetType="Core:PageContent">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Core:PageContent">
                    <Grid x:Name="NotificationsLayerControl">
                        <Grid x:Name="CustomContentLayerControl" Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="ContentControl"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
